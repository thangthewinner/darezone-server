# ============================================================================
# DareZone Backend Environment Variables
# ============================================================================

# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database connection string (optional, for direct PostgreSQL access)
# Get from: Settings → Database → Connection string → URI
# DATABASE_URL=postgresql://postgres:PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

APP_NAME=DareZone
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:19006,http://localhost:3000,exp://192.168.1.8:8081

# ============================================================================
# CHALLENGE & HABIT CONFIGURATION
# ============================================================================

# Maximum habits per challenge
MAX_HABITS_PER_CHALLENGE=4

# Default hitch count per member per day
DEFAULT_HITCH_COUNT=2

# Points per check-in
POINTS_PER_CHECKIN=10

# Streak multiplier for points
STREAK_MULTIPLIER=1.5

# Maximum challenge duration in days
MAX_CHALLENGE_DURATION=365

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================

# Supabase Storage bucket names
STORAGE_BUCKET_PHOTOS=darezone-photos
STORAGE_BUCKET_VIDEOS=darezone-videos

# Max upload sizes (in MB)
MAX_UPLOAD_SIZE_MB=10
MAX_VIDEO_SIZE_MB=50

# Allowed file types
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/quicktime

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================

# Enable push notifications
ENABLE_PUSH_NOTIFICATIONS=true

# Firebase Cloud Messaging (for push notifications)
# Get from: Firebase Console → Project Settings → Cloud Messaging
# FCM_SERVER_KEY=your-fcm-server-key-here

# Notification expiry (in hours)
NOTIFICATION_EXPIRY_HOURS=168

# ============================================================================
# RATE LIMITING
# ============================================================================

# Hitch reminders per user per day
MAX_HITCH_PER_DAY=3

# API rate limit (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Login attempts before lockout
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# ============================================================================
# SECURITY
# ============================================================================

# JWT Secret (for additional token signing if needed)
# JWT_SECRET=your-super-secret-key-here

# Password hashing rounds
# BCRYPT_ROUNDS=12

# Session timeout (in hours)
SESSION_TIMEOUT_HOURS=24

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Log format: json, text
LOG_FORMAT=json

# ============================================================================
# B2B FEATURES (Optional)
# ============================================================================

# Enable B2B organization features
ENABLE_B2B_FEATURES=true

# Default organization plan limits
ORG_STARTER_MAX_MEMBERS=50
ORG_GROWTH_MAX_MEMBERS=200
ORG_ENTERPRISE_MAX_MEMBERS=10000

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================

# Enable analytics tracking
ENABLE_ANALYTICS=false

# Google Analytics tracking ID (if using)
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================================================
# EXTERNAL SERVICES (Future)
# ============================================================================

# SendGrid (for emails)
# SENDGRID_API_KEY=your-sendgrid-key-here
# SENDGRID_FROM_EMAIL=noreply@darezone.com

# Twilio (for SMS)
# TWILIO_ACCOUNT_SID=your-twilio-sid-here
# TWILIO_AUTH_TOKEN=your-twilio-token-here
# TWILIO_FROM_NUMBER=+1234567890

# AWS S3 (alternative to Supabase Storage)
# AWS_ACCESS_KEY_ID=your-aws-key-here
# AWS_SECRET_ACCESS_KEY=your-aws-secret-here
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=darezone-media

# ============================================================================
# TESTING (for test environment)
# ============================================================================

# Test database URL (separate from production)
# TEST_DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# Disable RLS for testing (NEVER in production!)
# DISABLE_RLS_FOR_TESTING=false
